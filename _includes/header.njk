<!-- Header -->
<header id="header" class="{{ 'header--inner' if headerStyle == 'inner' else '' }}">
  <div class="container">
    <div class="header-inner">
      <a href="/" class="logo">
        <img src="{{ site.logo }}" alt="{{ site.name }}" class="logo-img">
        {{ site.name }}
      </a>
      <nav>
        <div class="nav-dropdown">
          <a href="/services/"{% if activeNav == 'services' %} class="active"{% endif %}>Services ▾</a>
          <div class="dropdown-content">
            <a href="/services/websites/">Websites</a>
            <a href="/services/payment-processing/">Payment Processing</a>
            <a href="/services/crm/">CRM</a>
            <a href="/services/booking-scheduling/">Booking & Scheduling</a>
            <a href="/services/marketing-automation/">Marketing Automation</a>
            <a href="/services/seo/">SEO</a>
            <a href="/services/ai-consulting/">AI Consulting</a>
          </div>
        </div>
        <div class="nav-dropdown">
          <a href="/industries/"{% if activeNav == 'industries' %} class="active"{% endif %}>Industries ▾</a>
          <div class="dropdown-content">
            <a href="/industries/therapists/">Therapists</a>
            <a href="/industries/contractors/">Contractors</a>
            <a href="/industries/medical-practices/">Medical Practices</a>
            <a href="/industries/salons-spas/">Salons & Spas</a>
            <a href="/industries/consultants/">Consultants</a>
            <a href="/industries/restaurants/">Restaurants</a>
          </div>
        </div>
        <a href="/compare/"{% if activeNav == 'compare' %} class="active"{% endif %}>Compare</a>
        <a href="/blog/"{% if activeNav == 'blog' %} class="active"{% endif %}>Blog</a>
        <a href="/#contact" class="btn btn-primary">Contact</a>
      </nav>
      
      <!-- Mobile Menu Button -->
      <div class="mobile-menu-btn" onclick="toggleMobileMenu()">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
</header>

