    <span class="mobile-nav-label">Industries</span>
    <a href="/industries/" onclick="closeMobileMenu()">All Industries</a>
    <a href="/industries/therapists/" onclick="closeMobileMenu()">→ Therapists</a>
    <a href="/industries/contractors/" onclick="closeMobileMenu()">→ Contractors</a>
    <a href="/industries/medical-practices/" onclick="closeMobileMenu()">→ Medical</a>
  </div>
  <a href="/compare/" onclick="closeMobileMenu()">Compare</a>
  <a href="/blog/" onclick="closeMobileMenu()">Blog</a>
  <a href="/#contact" class="btn btn-primary" onclick="closeMobileMenu()">Contact</a>
</div>
